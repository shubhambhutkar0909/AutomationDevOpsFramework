<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Open Cart Regression Suite" thread-count="4"
	parallel="tests" verbose="4">

	<listeners>
	<listener
			class-name="com.qa.opencart.listerners.AnnotationTransformer" />
	<listener 
			class-name="com.qa.opencart.listerners.TestAllureListener" />

	</listeners>

	<test name="Login Page Test">
		<parameter name="browser" value="firefox" />
		<parameter name="browserversion" value="57" />
		<classes>
			<class name="com.qa.opencart.tests.LoginPageTest" />
		</classes>
	</test>

	<test name="Accounts Page Test">
		<parameter name="browser" value="chrome" />
<!--		<parameter name="browserversion" value="85" />
-->		<classes>
			<class name="com.qa.opencart.tests.AccountsPageTest" />
		</classes>
	</test>

	<test name="ProductInfo Page Test">
		<parameter name="browser" value="firefox" />
		<!--<parameter name="browserversion" value="83" />-->

		<classes>
			<class name="com.qa.opencart.tests.ProductInfoPageTest" />
		</classes>
	</test>

	 <test name="Registration Page Test">
		<parameter name="browser" value="chrome" />

		<classes>
			<class name="com.qa.opencart.tests.RegistrationPageTest" />
		</classes>
	</test> 




</suite>